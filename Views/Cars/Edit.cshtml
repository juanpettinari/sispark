@model SisPark.Models.Car

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Auto</legend>

        @Html.HiddenFor(model => model.CarId)

        <div class="editor-label">
            @Html.LabelFor(model => model.CarTypeId, "CarType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Patente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Patente)
            @Html.ValidationMessageFor(model => model.Patente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NombreCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreCliente)
            @Html.ValidationMessageFor(model => model.NombreCliente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TelCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TelCliente)
            @Html.ValidationMessageFor(model => model.TelCliente)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
