@model SisPark.Models.Car

@{
    ViewBag.Title = "Agregar";
}

<h2>Agregar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Auto</legend>

        <div class="editor-label">
            Tipo de Auto(*)
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarTypeId)
        </div>

        <div class="editor-label">
            Patente(*)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Patente)
            @Html.ValidationMessageFor(model => model.Patente)
        </div>

        <div class="editor-label">
            Descripción
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            Nombre del Cliente
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreCliente)
            @Html.ValidationMessageFor(model => model.NombreCliente)
        </div>

        <div class="editor-label">
            Telefono del Cliente
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TelCliente)
            @Html.ValidationMessageFor(model => model.TelCliente)
        </div>

        <p>
            (*)=Requerido
        </p>
        <p>
            <input type="submit" value="Agregar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
