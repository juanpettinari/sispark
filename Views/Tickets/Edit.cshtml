@model SisPark.Models.Ticket

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ticket</legend>

        @Html.HiddenFor(model => model.TicketId)

        <div class="editor-label">
            @Html.LabelFor(model => model.CarId, "Car")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CarId", String.Empty)
            @Html.ValidationMessageFor(model => model.CarId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TicketStateId, "TicketState")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TicketStateId", String.Empty)
            @Html.ValidationMessageFor(model => model.TicketStateId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDateTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDateTime)
            @Html.ValidationMessageFor(model => model.StartDateTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FinishDateTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FinishDateTime)
            @Html.ValidationMessageFor(model => model.FinishDateTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TotalTime)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TotalTime)
            @Html.ValidationMessageFor(model => model.TotalTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TotalPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TotalPrice)
            @Html.ValidationMessageFor(model => model.TotalPrice)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
